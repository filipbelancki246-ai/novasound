    <script>
        // –°–æ—Å—Ç–æ—è–Ω–∏–µ
        let currentUser = { name: '–ü–∏–ª–∏–ø' };
        let isPlaying = false;
        let currentTheme = 'dark';
        let currentLanguage = 'ru';

        // DOM —ç–ª–µ–º–µ–Ω—Ç—ã
        const authModal = document.getElementById('authModal');
        const player = document.getElementById('player');
        const homePage = document.getElementById('homePage');
        const searchPage = document.getElementById('searchPage');
        const libraryPage = document.getElementById('libraryPage');
        const premiumPage = document.getElementById('premiumPage');
        const settingsPage = document.getElementById('settingsPage');
        const navItems = document.querySelectorAll('.nav-item');
        const settingsMenuItems = document.querySelectorAll('.settings-menu-item');
        const settingsSections = document.querySelectorAll('.settings-section');
        const themeOptions = document.querySelectorAll('.theme-option');
        const languageOptions = document.querySelectorAll('.language-option');
        const logoutBtns = document.querySelectorAll('#logoutBtn, #settingsLogout');
        const homeBtn = document.getElementById('homeBtn');
        const profileBtn = document.getElementById('profileBtn');

        // –ó–∞–≥—Ä—É–∑–∫–∞ –∞–≤–∞—Ç–∞—Ä–∞
        const avatarInput = document.getElementById('avatarInput');
        const userAvatar = document.getElementById('userAvatar');
        const settingsAvatar = document.getElementById('settingsAvatar');
        const settingsAvatarInput = document.getElementById('settingsAvatarInput');
        const settingsAvatarEdit = document.getElementById('settingsAvatarEdit');
        const settingsProfileBtn = document.getElementById('settingsProfileBtn');

        function handleAvatarUpload(file, avatarElements) {
            const reader = new FileReader();
            reader.onload = function(e) {
                const imageUrl = e.target.result;
                avatarElements.forEach(el => {
                    if (el) {
                        el.style.backgroundImage = `url('${imageUrl}')`;
                        el.style.backgroundSize = 'cover';
                        el.style.backgroundPosition = 'center';
                    }
                });
            }
            reader.readAsDataURL(file);
        }

        avatarInput.addEventListener('change', function(e) {
            if (e.target.files && e.target.files[0]) {
                handleAvatarUpload(e.target.files[0], [userAvatar, settingsAvatar]);
            }
        });

        settingsAvatarEdit.addEventListener('click', function() {
            settingsAvatarInput.click();
        });

        settingsAvatarInput.addEventListener('change', function(e) {
            if (e.target.files && e.target.files[0]) {
                handleAvatarUpload(e.target.files[0], [userAvatar, settingsAvatar]);
            }
        });

        settingsProfileBtn.addEventListener('click', function() {
            navItems.forEach(nav => nav.classList.remove('active'));
            navItems[4].classList.add('active'); // Settings
            homePage.classList.add('hidden');
            searchPage.classList.add('hidden');
            libraryPage.classList.add('hidden');
            premiumPage.classList.add('hidden');
            settingsPage.classList.remove('hidden');
        });

        // –ê–≤—Ç–æ—Ä–∏–∑–∞—Ü–∏—è
        document.getElementById('loginBtn').addEventListener('click', () => {
            currentUser = { name: '–ü–∏–ª–∏–ø' };
            updateUserNames();
            authModal.classList.add('hidden');
            player.classList.remove('hidden');
        });

        document.getElementById('registerBtn').addEventListener('click', () => {
            const name = document.getElementById('regName').value || '–ü–∏–ª–∏–ø';
            currentUser = { name };
            updateUserNames();
            authModal.classList.add('hidden');
            player.classList.remove('hidden');
        });

        function updateUserNames() {
            document.getElementById('userName').textContent = currentUser.name;
            document.getElementById('greetingName').textContent = currentUser.name;
            document.getElementById('settingsUserName').textContent = currentUser.name;
        }

        // –ù–∞–≤–∏–≥–∞—Ü–∏—è
        navItems.forEach(item => {
            item.addEventListener('click', () => {
                navItems.forEach(nav => nav.classList.remove('active'));
                item.classList.add('active');

                const page = item.dataset.page;
                homePage.classList.add('hidden');
                searchPage.classList.add('hidden');
                libraryPage.classList.add('hidden');
                premiumPage.classList.add('hidden');
                settingsPage.classList.add('hidden');

                if (page === 'home') {
                    homePage.classList.remove('hidden');
                } else if (page === 'search') {
                    searchPage.classList.remove('hidden');
                } else if (page === 'library') {
                    libraryPage.classList.remove('hidden');
                } else if (page === 'premium') {
                    premiumPage.classList.remove('hidden');
                } else if (page === 'settings') {
                    settingsPage.classList.remove('hidden');
                }
            });
        });

        // –ú–µ–Ω—é –Ω–∞—Å—Ç—Ä–æ–µ–∫
        settingsMenuItems.forEach(item => {
            item.addEventListener('click', () => {
                settingsMenuItems.forEach(menu => menu.classList.remove('active'));
                item.classList.add('active');

                const section = item.dataset.settings;
                settingsSections.forEach(sec => sec.classList.remove('active'));
                document.getElementById(section + 'Section').classList.add('active');
            });
        });

        // –°–º–µ–Ω–∞ —Ç–µ–º—ã
        themeOptions.forEach(option => {
            option.addEventListener('click', () => {
                themeOptions.forEach(opt => opt.classList.remove('active'));
                option.classList.add('active');

                const theme = option.dataset.theme;
                document.body.className = theme + '-theme';
                currentTheme = theme;
            });
        });

        // –°–º–µ–Ω–∞ —è–∑—ã–∫–∞
        languageOptions.forEach(option => {
            option.addEventListener('click', () => {
                languageOptions.forEach(opt => opt.classList.remove('active'));
                option.classList.add('active');
                currentLanguage = option.dataset.lang;

                const translations = {
                    ru: {
                        home: '–ì–ª–∞–≤–Ω–∞—è',
                        search: '–ü–æ–∏—Å–∫',
                        library: '–ú–æ—è –º–µ–¥–∏–∞—Ç–µ–∫–∞',
                        premium: 'Premium',
                        settings: '–ù–∞—Å—Ç—Ä–æ–π–∫–∏'
                    },
                    uk: {
                        home: '–ì–æ–ª–æ–≤–Ω–∞',
                        search: '–ü–æ—à—É–∫',
                        library: '–ú–æ—è –º–µ–¥—ñ–∞—Ç–µ–∫–∞',
                        premium: 'Premium',
                        settings: '–ù–∞–ª–∞—à—Ç—É–≤–∞–Ω–Ω—è'
                    },
                    en: {
                        home: 'Home',
                        search: 'Search',
                        library: 'My Library',
                        premium: 'Premium',
                        settings: 'Settings'
                    }
                };

                const t = translations[currentLanguage];
                if (t) {
                    navItems[0].textContent = t.home;
                    navItems[1].textContent = t.search;
                    navItems[2].textContent = t.library;
                    navItems[3].textContent = t.premium;
                    navItems[4].textContent = t.settings;
                }
            });
        });

        // –ü–ª–µ–µ—Ä
        const playPauseBtn = document.getElementById('playPauseBtn');
        playPauseBtn.addEventListener('click', () => {
            isPlaying = !isPlaying;
            if (isPlaying) {
                playPauseBtn.classList.remove('fa-play-circle');
                playPauseBtn.classList.add('fa-pause-circle');
            } else {
                playPauseBtn.classList.remove('fa-pause-circle');
                playPauseBtn.classList.add('fa-play-circle');
            }
        });

        // –¢–æ–≥–≥–ª—ã
        document.querySelectorAll('.toggle-switch').forEach(toggle => {
            toggle.addEventListener('click', (e) => {
                e.stopPropagation();
                toggle.classList.toggle('active');
            });
        });

        // –ì—Ä–æ–º–∫–æ—Å—Ç—å
        const volumeBar = document.getElementById('volumeBar');
        const volumeProgress = document.getElementById('volumeProgress');

        volumeBar.addEventListener('click', (e) => {
            const rect = volumeBar.getBoundingClientRect();
            const x = e.clientX - rect.left;
            const width = rect.width;
            const volume = (x / width) * 100;
            volumeProgress.style.width = volume + '%';
        });

        // –í—ã—Ö–æ–¥
        logoutBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                player.classList.add('hidden');
                authModal.classList.remove('hidden');
            });
        });

        // –ö–Ω–æ–ø–∫–∞ –¥–æ–º–æ–π
        homeBtn.addEventListener('click', () => {
            navItems.forEach(nav => nav.classList.remove('active'));
            navItems[0].classList.add('active');
            homePage.classList.remove('hidden');
            searchPage.classList.add('hidden');
            libraryPage.classList.add('hidden');
            premiumPage.classList.add('hidden');
            settingsPage.classList.add('hidden');
        });

        // Premium –∫–Ω–æ–ø–∫–∞
        document.getElementById('startPremiumBtn').addEventListener('click', () => {
            alert('üéµ –î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å –≤ Premium! 30 –¥–Ω–µ–π –±–µ—Å–ø–ª–∞—Ç–Ω–æ –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω–æ.');
        });

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
        updateUserNames();
    </script>
</body>
</html>
